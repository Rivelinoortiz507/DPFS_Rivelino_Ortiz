<%- include('../partials/head') %>

    <link rel="stylesheet" href="/css/productDetail.css">    
    </head>

    <body>

        <%- include('../partials/header') %>
        <h1>Detalles del Producto</h1>

            <main>
             
                <div class="product-detail">
                    <img class="product-img" src="<%= product.imageUrl %>" alt="<%= product.name %>">
                    <div>
                        <h2>
                            <%= product.name %>
                        </h2>
                        <p class="description">
                            <%= product.description %>
                        </p>
                        <p class="price">Precio: $<%= product.price %>
                        </p>
                        <button class="add-to-cart">AÃ±adir al carrito</button>
                        <a class="edit" href="/products/edit/<%= product.id %>">Editar</a>
                        <form action="/products/<%= product.id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn-delete">Eliminar</button>
                          </form>
                    </div>
                </div>
                <a class="volver" href="/products">Volver  </a>
            </main>
  

            <script src="/javascripts/productDetail.js" defer></script>
    </body>



    <%- include('../partials/footer') %>